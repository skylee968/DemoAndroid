<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
    </style>

    <!-- Application theme. -->
    <style name="AppThemeReader" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TextViewItemBookRowStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="MbrTxtStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/common_txt_size_normal</item>
    </style>
    <style name="MbrTxtButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_txt_size_normal</item>
    </style>

    <style name="TxtBaseStyle">
    </style>
    <style name="TxtHugeStyle" parent="TxtBaseStyle">
        <item name="android:textSize">@dimen/common_txt_size_huge</item>
    </style>
    <style name="TxtBigStyle" parent="TxtBaseStyle">
        <item name="android:textSize">@dimen/common_txt_size_big</item>
    </style>
    <style name="TxtNormalStyle" parent="TxtBaseStyle">
        <item name="android:textSize">@dimen/common_txt_size_normal</item>
    </style>
    <style name="TxtSmallStyle" parent="TxtBaseStyle">
        <item name="android:textSize">@dimen/common_txt_size_small</item>
    </style>
    <style name="TxtTitleActionBarStyle">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MainTextStyle" parent="TxtBaseStyle">
        <item name="android:textSize">@dimen/common_txt_size_normal</item>
    </style>
    <style name="DialogFullScreen" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MainContentStyle">
        <item name="android:padding">15dp</item>
    </style>
    <style name="BtnNormalStyle" parent="TxtNormalStyle">
        <item name="android:background">@drawable/background_button_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/common_txt_size_normal</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="BtnRedSocialStyle" parent="BtnNormalStyle">
        <item name="android:background">@drawable/background_button_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BtnBlueSocialStyle" parent="BtnNormalStyle">
        <item name="android:background">@drawable/background_button_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="BtnGraySocialStyle" parent="BtnNormalStyle">
        <item name="android:background">@drawable/background_button_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray"
    android:clickable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_avatar_user"
        android:layout_width="@dimen/user_img_size_width"
        android:layout_height="@dimen/user_img_size_height"
        android:src="@mipmap/ic_user" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/user_img_size_height"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/info_user_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/common_padding_small">

            <TextView
                android:id="@+id/user_name"
                style="@style/TxtNormalStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/bright_gray" />

            <TextView
                android:id="@+id/user_coins"
                style="@style/TxtNormalStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 Coins"
                android:textColor="@color/orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_user_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/btn_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_button_green"
                android:gravity="center"
                android:text="@string/common_txt_login"
                android:textColor="@color/white"
                android:textSize="@dimen/common_size_normal"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_size_height"
        android:background="@color/main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/btn_navigation"
            android:layout_width="@dimen/action_bar_size_navi_width"
            android:layout_height="@dimen/action_bar_size_navi_height"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_navigation_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/appTitle"
            style="@style/TxtTitleActionBarStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_padding_small"
            android:layout_marginRight="@dimen/common_padding_small"
            android:layout_toRightOf="@+id/btn_navigation"
            android:layout_weight="1"
            android:text="@string/app_name"
            android:textColor="@color/white" />


        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/action_bar_size_search_btn"
            android:layout_height="@dimen/action_bar_size_search_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_padding_small"
            android:background="@drawable/ic_menu_search"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
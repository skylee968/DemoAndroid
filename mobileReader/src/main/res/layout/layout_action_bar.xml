<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_size_height"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="5dp"
    tools:context=".activities.BaseNewActivity" >

    <ImageView
        android:id="@+id/btn_navigation"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_navigation_back"
        android:visibility="visible"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/appTitle"
        android:layout_toRightOf="@+id/btn_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/app_name"
        android:layout_marginLeft="@dimen/common_padding_small"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/common_padding_small"
        android:textSize="27sp"
        android:textStyle="bold" />


        <ImageView
            android:id="@+id/btn_search"
            android:layout_width="@dimen/action_bar_size_search_btn"
            android:layout_height="@dimen/action_bar_size_search_btn"
            android:textSize="25sp"
            android:textStyle="bold"
            android:background="@drawable/ic_menu_search"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_padding_small"/>

</RelativeLayout>
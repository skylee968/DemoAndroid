<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_book_row_width"
    android:layout_height="@dimen/item_book_row_height"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_item_grid_view"
    android:padding="@dimen/common_padding_large">

    <ImageView
        android:id="@+id/img_cover_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/dark_gray_transparent">

        <TextView
            android:id="@+id/txt_name_book"
            style="@style/TextViewItemBookRowStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/txt_author_book"
            style="@style/TextViewItemBookRowStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name" />
    </LinearLayout>

</RelativeLayout>

